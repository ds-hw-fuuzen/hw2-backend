{
    "name": "hw2",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "workspaceFolder": "/app",
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind"
    ],
    "remoteUser": "root"
}